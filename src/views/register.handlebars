<div class="divCentrarForm">
    <div class="form-box">
        <form class="form" action="/api/users/register" method="post">
            <span class="title">Sign up</span>
            <span class="subtitle">Create a free account with your email.</span>
            <div class="form-container">
                <input type="text" class="input" name="firstname" placeholder="firstname" required>
                <input type="text" class="input" name="lastname" placeholder="lastname" required>
                <input type="number" class="input" name="age" placeholder="Edad" required/>
                <input type="email" class="input" name="email" placeholder="Email" required>
                <input type="password" class="input" name="password" placeholder="Password" required>
            </div>
            <button type="submit">Sign up</button>
        </form>
        <div class="form-section">
            <p>Register with GitHub? <a href="/api/users/login/github">Register</a> </p>
            <p>Have an account? <a href="/api/users/login">Log in</a> </p>
        </div>
    </div>
</div>
